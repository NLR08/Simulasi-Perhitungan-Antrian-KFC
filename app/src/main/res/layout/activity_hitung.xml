<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.baperanz.customer.perhitungankfc.HitungActivity"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:srcCompat="@drawable/logokfc"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:fontFamily="sans-serif"
        android:text="Hasil Perhitungan"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btnHitung"
        android:layout_alignStart="@+id/btnHitung" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="M/G/1/I/I"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp" />

    <EditText
        android:id="@+id/editLamda2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="53dp"
        android:ems="10"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="Inputkan Tingkat Kedatangan"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editMiu2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/editLamda2"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:hint="Inputkan Tingkat Pelayanan Rata2"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editMiu2"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:hint="Standar Deviasi"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnHitung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editS"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:background="@android:color/holo_red_dark"
        android:onClick="onClick"
        android:text="Hitung"
        android:textColor="@android:color/white"
        android:textStyle="bold" />
    <Button
        android:id="@+id/btnHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnHitung"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:background="@android:color/holo_red_dark"
        android:onClick="onClick"
        android:padding="10dp"
        android:text="History Perhitungan"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

</RelativeLayout>